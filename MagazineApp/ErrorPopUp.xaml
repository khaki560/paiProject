<Window x:Class="MagazineApp.ErrorPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagazineApp"
        mc:Ignorable="d"
        Title="ErrorPopUp" Height="150" Width="350">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30*" />
			<RowDefinition Height="30" />
		</Grid.RowDefinitions>

		<Label Content="Something Went wrong, Aborting" FontSize="20" Foreground="Red" />

		<Button Grid.Row="1" Content="OK" Click="Button_Click" />


	</Grid>
</Window>
