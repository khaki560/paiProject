<Window x:Class="MagazineApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagazineApp"
        mc:Ignorable="d"
        Title="Magazine" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="75" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="75" />
				<ColumnDefinition Width="75" />
				<ColumnDefinition Width="75" />
				<ColumnDefinition Width="75" />

			</Grid.ColumnDefinitions>

			<Button Name="Filter" Content="All" VerticalAlignment="Center"  Grid.Column="0" HorizontalAlignment="Center" Width="75">
				<Button.ContextMenu>
					<ContextMenu>
					</ContextMenu>
				</Button.ContextMenu>
			</Button>

            <Label Name="Synchro" Content="123" Grid.Column="1" Margin="0,0,112,0" />
            <Button Name="EditUnits" Content="Edit Units" Grid.Column="1" HorizontalAlignment="Left" Margin="319,0,0,0" VerticalAlignment="Top" Width="75" Height="30" Click="ButttonEditUnits_Click"/>
            <Button Name="Add" Content="add"         Grid.Column="2" Click="ButtonAdd_Click"/>
            <Button Name="Delete" Content="Delete"   Grid.Column="3" Click="ButtonDelete_Click"/>
            <Button Name="Modify" Content="Modify"   Grid.Column="4" Click="ButtonModify_Click"/>
            <Button Name="Refresh" Content="Refresh" Grid.Column="5" Click="ButtonRefresh_Click"/>
        </Grid>

		<ListView Margin="10" Grid.Row="1" Name="ListOfEntires">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Active">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<Grid>
									<CheckBox  x:Name="chkAvg" IsChecked="{Binding Selected}" />
								</Grid>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="Name" Width="50" DisplayMemberBinding="{Binding Name}" />
					<GridViewColumn Header="Count" Width="150" DisplayMemberBinding="{Binding Count}" />
					<GridViewColumn Header="Database" Width="150" DisplayMemberBinding="{Binding Localization}" />
				</GridView>
			</ListView.View>
		</ListView>
	</Grid>
</Window>
