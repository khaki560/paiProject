<Window x:Class="MagazineApp.ModifyPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagazineApp"
        mc:Ignorable="d"
        Title="ModifyPopUp" Height="160" Width="200">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30" />
			<RowDefinition Height="30" />
			<RowDefinition Height="30" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>


		<Label Content="Count" HorizontalAlignment="Center"  Grid.Row="0" Grid.Column="0" />
		<TextBox Grid.Row="1"  Name="countValue" Text=""/>

		<Button Content="Modify" HorizontalAlignment="Center"  Grid.Row="2" Click="Modify" />
	</Grid>
</Window>
