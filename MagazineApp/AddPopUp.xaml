<Window x:Class="MagazineApp.AddPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagazineApp"
        mc:Ignorable="d"
        Title="Add" Height="250" Width="200">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30" />
			<RowDefinition Height="30" />
			<RowDefinition Height="30" />
			<RowDefinition Height="30" />
			<RowDefinition Height="30" />
			<RowDefinition Height="30" />
			<RowDefinition Height="30" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>


		<Label Content="Name" HorizontalAlignment="Center" Grid.Row="0" />
		<TextBox Grid.Row="1" Name="nameValue" Text=""/>

		<Label Content="Count" HorizontalAlignment="Center"  Grid.Row="2" Grid.Column="0" />
		<TextBox Grid.Row="3"  Name="countValue" Text=""/>

		<Label Content="Database" HorizontalAlignment="Center"  Grid.Row="4" Grid.Column="0" />
		<TextBox Grid.Row="5" Name="databaseValue" Text=""/>

		<Button Content="Add" HorizontalAlignment="Center"  Grid.Row="6" Click="AddClick" />
		
	</Grid>
</Window>
